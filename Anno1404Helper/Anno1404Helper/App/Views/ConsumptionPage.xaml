<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Anno1404Helper.App.ViewModels"
             xmlns:models="clr-namespace:Anno1404Helper.App.Models"
             x:Class="Anno1404Helper.App.Views.ConsumptionPage"
             x:DataType="viewModels:ConsumptionViewModel">


    <ScrollView VerticalOptions="Fill">
        <VerticalStackLayout>

            <CollectionView ItemsSource="{Binding Needs }"
                            SelectedItem="{Binding SelectedNeed}"
                            SelectionMode="Single"
                            VerticalOptions="Fill"
                            HorizontalOptions="Fill">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:NeedModel">
                        <Border
                            Padding="2"
                            Margin="5">
                            <Grid ColumnDefinitions="50,100,*,35,50" RowDefinitions="50">
                                <Image Grid.Column="0" Source="{Binding Product.Icon}" />
                                <Label Grid.Column="1" Text="{Binding Factory.Name}" />
                                <ProgressBar Grid.Column="2" Progress="{Binding FactoryDecimalUsage}"  />
                                <Label Grid.Column="3" Text="{Binding FactoryPercentUsage, StringFormat='{0:F0}%'}" />
                                <Label Grid.Column="4"
                                       FontAttributes="Bold"
                                       Text="{Binding NbFactoriesNeeded,
                            StringFormat='{0:F2}'}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>